<div class="hero-unit">
  <h2>All Todos</h2>
  <%- linkTo('Create a new Todo', addTodoPath, {class: 'btn pull-right'}); %>
</div>

<% if(todos) { %>
<% for(var i in todos) { %>
<div class="row list-item">
  <div class="span8">
    <h3><%- linkTo(todos[i].title, todoPath(todos[i].id)); %></h3>
  </div>
  <div class="span4">
    <h3><i class="icon-list-alt"></i><%= todos[i].status; %></h3>
  </div>
</div>
<% } %>
<% } %>
